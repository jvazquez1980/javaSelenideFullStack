    <listeners>
        <listener class-name="core.AllureScreenshotListener"/>
    </listeners>
    <test name="UITests" preserve-order="true">
        <classes>
            <class name="tests.UiExamples.SolidPomTest"/>
            <class name="tests.UiExamples.DirectUITest"/>
            <class name="tests.home.ShortByTest"/>
            <class name="tests.login.LoginTest"/>
            <class name="tests.product.ProductPageTest"/>
            <class name="tests.product.ProductValidationTest"/>
        </classes>
    </test>
    <test name="APITests" preserve-order="true">
        <classes>
            <class name="tests.api.ApiTest"/>
            <class name="tests.api.ApiSchemaTest"/>
        </classes>
    </test>
</suite>
