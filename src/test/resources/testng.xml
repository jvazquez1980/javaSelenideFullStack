<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="AutomationTestSuite" verbose="1">
    <listeners>
        <listener class-name="core.AllureScreenshotListener"/>
    </listeners>
    <test name="UITests" preserve-order="true">
        <classes>
            <class name="tests.SimpleUITest"/>
            <class name="tests.DirectUITest"/>
            <class name="tests.home.ShortBy"/>
            <class name="tests.product.productPage"/>
        </classes>
    </test>
    <test name="APITests" preserve-order="true">
        <classes>
            <class name="tests.ApiTesting"/>
            <class name="tests.ApiSchema"/>
        </classes>
    </test>
</suite>
